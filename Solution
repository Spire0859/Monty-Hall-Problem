class Door {
    constructor(number, isCar) {
        this.number = number;
        this.isCar = isCar;
        this.opened = false;
    }

   
}


class Game {
    constructor() {
        this.doors = []; // 
        this.doorPicked; // which door i init picked prob an int
        this.openedGoatDoor; // which door was the goat door prob an int
        this.finalPick; // which door was picked prob an int
        this.won; // true or false
    }
    //Add any method needed
}


class Statistics {
    constructor() {
        this.gamesWithSameDoorWon = [];
        this.gamesWithSameDoorLost = [];
        this.gamesWithDoorChangeWon = [];
        this.gamesWithDoorChangeLost = [];
    }

    percentatge() {
        let temp = this.gamesWithSameDoorWon.length /  (this.gamesWithSameDoorWon.length + this.gamesWithSameDoorLost.length) * 100 ;
        console.log(temp);
       console.log (temp, "% of games were won when not switching door.")

    }
}

function shuffleArray(array) {
    for (var i = array.length - 1; i > 0; i--) {
        var j = Math.floor(Math.random() * (i + 1));
        var temp = array[i];
        array[i] = array[j];
        array[j] = temp;
    }
}

function playGameNoSwitch(array,numOfGameObj,arrayStat){


let guess; 

for(let i = 0; i < numOfGameObj; i++){

guess = Math.floor(Math.random() * 3)



    if(guess == 0){
        array[i].doorPicked = 0;
        array[i].finalPick = 0;
    }else if(guess == 1){

        array[i].doorPicked = 1;
        array[i].finalPick = 1;
    }else if(guess == 2){

        array[i].doorPicked = 2;
        array[i].finalPick = 2;
    }

   

if( gamesList[i].doors[array[i].doorPicked].isCar ){
    arrayStat.gamesWithSameDoorWon.push(gamesList[i]);
    array[i].won = true;

}else if(!gamesList[i].doors[array[i].doorPicked].isCar) {
    arrayStat.gamesWithSameDoorLost.push(gamesList[i]);
    array[i].won = false;

}else{
    console.log("wwops");
}


}



}

//each game needs to make 3 doors
 let gamesList = new Array();
 let numOfGame =  5;  // change this to user input
 let numOfDoor = new Array();
 let statistics = new Statistics();
 

for (let i = 0; i < numOfGame; i++){

    gamesList.push(new Game());

    numOfDoor.push(new Door(0, false));
    numOfDoor.push(new Door(1, false));
    numOfDoor.push(new Door(2, false));

}

for(let i = 0; i < numOfGame; i ++){

    for(let y = 0;y < 3 ; y++ ){
        gamesList[i].doors.push(numOfDoor[y]);
        if(y == 2){
        gamesList[i].doors[y].isCar = true;
        }
       
    }
    shuffleArray(gamesList[i].doors); 

}


shuffleArray(gamesList[0].doors); 

playGameNoSwitch(gamesList,numOfGame,statistics);
console.log("ji")
